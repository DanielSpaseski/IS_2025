@model JobsApplication.Domain.DomainModels.Application

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input type="hidden" asp-for="CandidateId" value="@ViewBag.CandidateId"/>
            <div class="form-group">
                <label asp-for="JobPositionId" class="control-label"></label>
                <select asp-for="JobPositionId" class="form-control" asp-items="ViewBag.JobPositionId"></select>
                <span asp-validation-for="JobPositionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
