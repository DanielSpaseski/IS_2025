@model AthletesApplication.Domain.DomainModels.Tournament

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<!-- TODO: Create Table for Tournament -->
<!-- Look at the table from any Index page for help -->
<!-- Iterate throught Model.AthletesInTournament -->
<!-- Display: Athlete FullName, Athlete JerseyNumber, Athlete DateOfBirth -->
<table class="table">
    <thead>
        <tr>
            <th>
                Athlete FullName
            </th>
            <th>
                Athlete JerseyNumber
            </th>
            <th>
                Athlete DateOfBirth
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.AthletesInTournament)
        {
            <tr>
                <td>
                    @item.Athlete.FullName
                </td>
                <td>
                    @item.Athlete.JerseyNumber
                </td>
                <td>
                    @item.Athlete.DateOfBirth
                </td>
            </tr>
        }
    </tbody>
</table>


<!--TODO: Display Total Athletes in Tournament-->
<div>
    <p>Total Athletes in Tournament: @Model.AthletesInTournament.Count </p>
</div>