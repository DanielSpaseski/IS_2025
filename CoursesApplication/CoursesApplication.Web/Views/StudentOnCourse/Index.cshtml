@model IEnumerable<CoursesApplication.Domain.DomainModels.StudentOnCourse>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="enrolled-courses" class="table">
    <thead>
        <tr>
            <th>
                Course Name
            </th>
            <th>
                Credits
            </th>
            <th>
                Semester
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @item.Course.Name
                </td>
                <td>
                    @item.Course.Credits
                </td>
                <td>
                    @item.Course.SemesterType
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
